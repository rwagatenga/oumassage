{
	"name": "oumassage",
	"private": true,
	"scripts": {
		"build": "next build",
		"check:format": "prettier --check '**/*.{js,json,md,ts,tsx,yaml,yml,sh}'  --ignore-path ./.prettierignore",
		"compile": "tsc --build tsconfig.json",
		"dev": "next dev",
		"format": "prettier --write '**/*.{js,json,md,ts,tsx,yaml,yml,sh}'",
		"lint": "next lint",
		"start": "next start"
	},
	"dependencies": {
		"next": "12.0.10",
		"react": "17.0.2",
		"react-dom": "17.0.2"
	},
	"devDependencies": {
		"@types/node": "17.0.13",
		"@types/prettier": "^2.4.3",
		"@types/react": "17.0.38",
		"autoprefixer": "^10.4.2",
		"concurrently": "^7.0.0",
		"eslint": "^8.8.0",
		"eslint-config-next": "12.0.10",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.2",
		"postcss": "^8.4.5",
		"prettier": "^2.5.1",
		"prettier-plugin-package": "^1.3.0",
		"prettier-plugin-sh": "^0.8.1",
		"tailwindcss": "^3.0.18",
		"typescript": "4.5.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{json,md,yaml,yml,sh}": [
			"prettier --write"
		],
		"**/*.{ts,js,tsx}": [
			"prettier --write",
			"yarn workspace **/* lint:fix"
		]
	},
	"workspaces": [
		"**/*"
	]
}
